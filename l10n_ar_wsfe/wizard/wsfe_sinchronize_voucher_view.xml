<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record id="view_wsfe_sinchronize_voucher" model="ir.ui.view">
            <field name="name">WSFE Sinchronize Voucher</field>
            <field name="model">wsfe.sinchronize.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="WSFE Sinchronize Voucher">
                    <group name="invoice" string="Invoice Relationship" col="4" colspan="4">
                        <field name="invoice_id"/>
                        <field name="config_id" groups="base.group_no_one"/>
                    </group>
                    <group string="Query Information">
                        <group col="4" colspan="2">
                            <div>
                                <label for="voucher_number"/>
                                <field name="voucher_number"/>
                            </div>
                        </group>
                        <group>
                            <field name="pos_id"/>
                            <field name="voucher_type" options='{"no_create_edit": true}'/>
                        </group>
                    </group>
                    <group string="Voucher Information">
                        <group>
                            <group colspan="2" col="4">
                                <field name="document_type"/>
                                <field name="document_number"/>
                                <field name="date_process"/>
                                <field name="date_invoice"/>
                                <field name="cae" invisible="1"/>
                                <field name="cae_due_date" invisible="1"/>
                            </group>
                            <group colspan="2" col="4">
                                <field name="amount_no_taxed"/>
                                <field name="amount_exempt"/>
                                <field name="amount_taxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                                <!--<field name="amount_untaxed"/>-->
                                <!--<field name="currency"/>-->
                            </group>
                            <group colspan="2" col="4" string="Expo Info."
                                attrs="{'invisible': [('customer_name', '=', False)]}">
                                <field name="customer_name"/>
                                <field name="customer_address"/>
                                <field name="dst_cuit_id" options='{"no_create_edit": true}'/>
                                <field name="dst_country_id" options='{"no_create_edit": true}'/>
                                <field name="board_perm_info"/>
                                <field name="partner_id" colspan="4" options='{"no_create_edit": true}'/>
                            </group>
                        </group>
                    </group>
                    <field name="infook" invisible="1"/>
                    <footer>
                        <button name="relate_invoice" string="Relate" type="object" class="oe_highlight"/>
                        or
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

    <act_window name="WSFE Sinchronize Voucher"
      res_model="wsfe.sinchronize.voucher"
      src_model="account.invoice"
      view_mode="form"
      target="new"
      key2="client_action_multi"
      id="action_wsfe_sinchronize_voucher"/>

    </data>
</openerp>
