<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_create_payment_lines" model="ir.ui.view">
            <field name="name">create.payment.lines.form</field>
            <field name="model">create.payment.lines</field>
            <field name="arch" type="xml">
            <form string="Search invoices and debts" version="7.0">
                <group>
                    <group>
                        <field name="duedate" on_change="onchange_duedate(duedate, partner_id, context)"/>
                    </group>
                    <group>
                        <field name="partner_id" on_change="onchange_duedate(duedate, partner_id, context)"/>
                    </group>
                </group>
                <group string="Entries">
                    <field name="entries" nolabel="1" widget="one2many_list">
                        <tree>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="ref"/>
                            <field name="partner_id"/>
                            <field name="date_maturity"/>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="currency_id"/>
                            <field name="amount_currency"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="create_lines" string="Add to Order" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>

        <record id="action_create_payment_lines" model="ir.actions.act_window">
            <field name="name">Populate Payment Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.payment.lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_create_payment_lines"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
