<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_wizard_accredit_check_form" model="ir.ui.view">
        <field name="name">wizard.accredit.check.form</field>
        <field name="model">wizard.accredit.check</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Accredit Check">
                <group>    
                    <group>
                        <field name="accreditation_date"/>
                    </group>
                    <group>
                        <button name="accredit_checks" string="Accredit Check" type="object" class="oe_highlight"/>
                    </group>
                </group>

            </form>
        </field>
    </record>

    <act_window 
            id="wizard_accredit_check_action"
            name="Accredit Check"
            res_model="wizard.accredit.check"
            src_model="account.issued.check"
            view_type="form"
            view_mode="form"
            view_id="view_wizard_accredit_check_form"
            target="new"/>
</data>
</openerp>
